<div>
  <%= flash[:notice] %>
</div>


<h1>新規投稿</h1>
<h2>タイトル</h2>
<p><%= @book.title %></p>
<h2>本文</h2>
<p><%= @book.body %></p>



<%= link_to "Edit", edit_book_path(@book),  class: "btn btn-primary" %>
<%= link_to "Back", books_path,  class: "btn btn-primary" %>

<% if @book.errors.any? %>
  <p><%= @book.errors.count %>件のエラーが発見されました</p>
  <ul>
    <% @book.errors.full_messages.each do |message| %>  <%# 修正: `full_message` → `full_messages` %>
      <li><%= message %></li>
      <% end %>
<% end %>
  </ul>
