<div>
  <%= flash[:notice] %>
</div>

<h1>Books</h1>

<table border="1">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td>
          <%= link_to 'Show', book_path(book), method: :get %>
          <%= link_to 'Edit', edit_book_path(book), method: :get %>
          <%= link_to 'Destroy', book_path(book), method: :delete, class: "btn btn-danger" %>
          
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="send">
  <% if @book.errors.any? %>
    <h2>We found <%= @book.errors.count %> error</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li>error: <%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <div><%= flash[:notice] %></div>

  <%= form_with model: @book, local: true do |f| %>
    <div class="send_title">タイトル</div>
    <%= f.text_field :title %>
    
    <div class="send_body">本文</div>
    <%= f.text_area :body %>

    <div>
      <%= f.submit "Create Book" %>  
    </div>
  <% end %>
</div>
